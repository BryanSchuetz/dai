<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title }}</title>
    <link>{{ site.url }}</link>
    <description>DAI News RSS Feed</description>
    <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S"}} EST</lastBuildDate>
    <atom:link href="https://www.dai.com/network-feed.xml" rel="self" type="application/rss+xml" />
   {% assign news = site.news | sort:'date' | reverse %}
   {% for post in news limit:30 %}
    <item>
      <title>{{ post.title }}</title>
      <link>{{site.url}}{{post.url}}</link>
      <guid>{{site.url}}{{post.url}}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <description>{{ post.summary | markdownify | remove:"<p>" | remove:"</p>" | strip_html | strip_newlines}}</description>
      <excerpt>{{ post.excerpt | strip_html | truncate:300 }}</excerpt>
      <image>https:/dai.com{{ post.social-image | default:"/uploads/social-image.jpg" }}</image>
    </item>{% endfor %}
  </channel>
</rss>
